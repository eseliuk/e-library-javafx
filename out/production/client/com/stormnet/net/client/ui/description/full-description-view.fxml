<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.stormnet.net.client.ui.description.FullDescriptionController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

<padding>
    <Insets top="15" right="15" bottom="10" left="15"/>
</padding>

    <Label visible="false" text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField visible="false"  fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>


    <Label text="Full Description:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextArea editable="false" fx:id="fullDescriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

<HBox spacing="10" alignment="BOTTOM_CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3">

    <Button text="Close" onAction="#closeBtnPressed" />

</HBox>
</GridPane>
