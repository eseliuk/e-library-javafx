<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="com.stormnet.net.client.ui.users.create.CreateUserController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

<padding>
    <Insets top="25" right="25" bottom="10" left="25"/>
</padding>

    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField disable="true" fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Date Of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <DatePicker fx:id="dateOfBirthField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

<HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="7">

    <Button text="Save User" onAction="#saveUserBtnPressed" />

    <Button text="Cancel" onAction="#cancelBtnPressed" />

</HBox>
</GridPane>
